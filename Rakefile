begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "ehcache"
    gemspec.summary = "JRuby interface to Ehcache"
    gemspec.description = "JRuby interface to Ehcache"
    gemspec.email = "dstamat@elctech.com"
    gemspec.homepage = "http://ehcache.rubyforge.org"
    gemspec.authors = ["Dylan Stamat", "Jason Voegele"]
  end

  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end
